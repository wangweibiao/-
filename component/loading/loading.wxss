 .loading {
     background: #000;
     color: #fff;
     width: 260rpx;
     height: 260rpx;
     font-size: 24rpx;
     border-radius: 10rpx;
     display: flex;
     align-items: center;
     justify-content: space-around;
     flex-direction: column;
 }
 
 .loadbox {
     width: 100%;
     height: 100%;
     background: #ccc;
     display: flex;
     align-items: center;
     justify-content: center;
     flex-direction: column;
 }
 
 .loading image {
     width: 160rpx;
     height: 160rpx;
 }